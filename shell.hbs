<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{{project.name}} - {{page.name}}</title>

        <!-- CSS -->
        <style>{{{shell.styles}}}</style>
    </head>
    <body>
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <h5 class="my-0 mr-md-auto font-weight-normal">Company name</h5>
            <nav class="my-2 my-md-0 mr-md-3">
                {{#each navigations.main}}
                    <a class="p-2 text-dark" href="{{url}}">{{name}}</a>
                {{/each}}
            </nav>
            {{#each navigations.highlight}}
                <a class="btn btn-outline-primary" href="{{url}}">{{name}}</a>
            {{/each}}
        </div>

        {{{layout.content}}}

        <footer class="container py-5">
            <div class="row">
                <div class="col-12 col-md">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="d-block mb-2"><circle cx="12" cy="12" r="10"></circle><line x1="14.31" y1="8" x2="20.05" y2="17.94"></line><line x1="9.69" y1="8" x2="21.17" y2="8"></line><line x1="7.38" y1="12" x2="13.12" y2="2.06"></line><line x1="9.69" y1="16" x2="3.95" y2="6.06"></line><line x1="14.31" y1="16" x2="2.83" y2="16"></line><line x1="16.62" y1="12" x2="10.88" y2="21.94"></line></svg>
                    <small class="d-block mb-3 text-muted">&copy; 2017-2018</small>
                </div>
                <div class="col-6 col-md">
                    <h5>Features</h5>
                    <ul class="list-unstyled text-small">
                        {{#each navigations.footer-1}}
                            <li><a class="text-muted" href="{{url}}">{{name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>Resources</h5>
                    <ul class="list-unstyled text-small">
                        {{#each navigations.footer-2}}
                            <li><a class="text-muted" href="{{url}}">{{name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>Resources</h5>
                    <ul class="list-unstyled text-small">
                        {{#each navigations.footer-3}}
                            <li><a class="text-muted" href="{{url}}">{{name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>About</h5>
                    <ul class="list-unstyled text-small">
                        {{#each navigations.footer-4}}
                            <li><a class="text-muted" href="{{url}}">{{name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </footer>

        <!-- JS -->
        <script>{{{shell.scripts}}}</script>
    </body>
</html>